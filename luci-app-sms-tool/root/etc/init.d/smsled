USE_PROCD=1
START=95
STOP=01

start_service() {
    procd_open_instance
    procd_set_param command /bin/sh "/sbin/smsled-init.sh"
    procd_close_instance
}


service_triggers()
{
        procd_add_reload_trigger "sms_tool"
}

stop_service() {
	for KILLPID in `ps | grep 'smsled' | awk ' { print $1;}'`; do 
  	( kill -9 $KILLPID >/dev/null 2>&1 )  2>&1 &
	done
	sleep 1 2>&1 &
	return 0
}

restart_service() {
    stop_service
    start_service
}
